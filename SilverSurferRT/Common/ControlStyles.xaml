<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Name="DictionaryItemTemplate">
        <StackPanel Orientation="Horizontal">
            <Button FontWeight="ExtraBold" Content="{Binding Key}" />
            <Button FontWeight="Thin" Content="{Binding Value}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
